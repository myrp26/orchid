#!/bin/bash
set -e

# XXX: this only exists because of this Cargo bug
# https://github.com/rust-lang/cargo/issues/8140

#exec $(echo "$*" | sed -e 's/ -C metadata=[^ ]*//g')

file=
for arg in "$@"; do
    if [[ ${arg} == ${CARGO_HOME}/* && -z ${file} ]]; then
        file=${arg##${CARGO_HOME}}
    fi
done

args=()
for arg in "$@"; do
    if [[ ${arg} == metadata=* ]]; then
        args+=(metadata="${file}")
    else
        args+=("${arg}")
    fi
done

exec "${args[@]}"
